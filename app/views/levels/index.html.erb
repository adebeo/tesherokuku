<p id="notice"><%= notice %></p>

<h1>Listing Levels</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Order</th>
      <th>Program</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @levels.each do |level| %>
      <tr>
        <td><%= level.name %></td>
        <td><%= level.description %></td>
        <td><%= level.order %></td>
        <td><%= level.program_id %></td>
        <td><%= link_to 'Show', [@program,level] %></td>
        <td><%= link_to 'Edit', edit_program_level_path(@program,level) %></td>
        <td><%= link_to 'Destroy',[@program,level], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Level', new_program_level_path(@program) %>
