<p id="notice"><%= notice %></p>

<h1>Listing Videos</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Lien</th>
      <th>Order</th>
      <th>Level</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @videos.each do |video| %>
      <tr>
        <td><%= video.name %></td>
        <td><%= video.description %></td>
        <td><%= video.lien %></td>
        <td><%= video.order %></td>
        <td><%= video.level_id %></td>
        <td><%= link_to 'Show', [@program,@level,video] %></td>
        <td><%= link_to 'Edit', edit_program_level_video_path(@program,@level,video) %></td>
        <td><%= link_to 'Destroy', [@program,@level,video], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Video', new_program_level_video_path(@program,@level) %>
